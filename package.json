{
	"name": "crash-course-web-app-development",
	"version": "1.0.0",
	"description": "Interactive crash course demonstrating modern framework benefits over traditional web development",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"dev:traditional": "python3 -m http.server 8000",
		"dev:modern": "next dev -p 3000",
		"dev:both": "concurrently \"npm run dev:traditional\" \"npm run dev:modern\""
	},
	"dependencies": {
		"next": "^14.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"framer-motion": "^10.16.0",
		"lucide-react": "^0.292.0"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"autoprefixer": "^10.4.0",
		"concurrently": "^8.2.0",
		"eslint": "^8.0.0",
		"eslint-config-next": "^14.0.0",
		"postcss": "^8.4.0",
		"tailwindcss": "^3.3.0",
		"typescript": "^5.0.0"
	}
}
